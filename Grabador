local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/luis32405516-cmyk/PREMIUM/refs/heads/main/Yy"))()
local Window = Library:CreateWindow()

local LP = game:GetService("Players").LocalPlayer
local RS = game:GetService("RunService")
local CG = game:GetService("CoreGui")

local routeData = {}
local recording = false
local playing = false

local function toggleCPU(state)
    if state then
        local black = Instance.new("ScreenGui", CG)
        black.Name = "LuisBlack"
        local f = Instance.new("Frame", black)
        f.Size = UDim2.new(1,0,1,0)
        f.BackgroundColor3 = Color3.new(0,0,0)
        f.Active = true
        setfpscap(5)
    else
        local black = CG:FindFirstChild("LuisBlack")
        if black then black:Destroy() end
        setfpscap(60)
    end
end

local MacroTab = Window:CreateTab("ü§ñ MACRO TEST")

MacroTab:CreateSwitch("GRABAR RUTA üî¥", function(s)
    recording = s
    if s then
        routeData = {}
        task.spawn(function()
            while recording do
                if LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
                    table.insert(routeData, LP.Character.HumanoidRootPart.CFrame)
                end
                task.wait(0.1)
            end
        end)
    end
end)

MacroTab:CreateSwitch("REPETIR RUTA üîÅ", function(s)
    playing = s
    task.spawn(function()
        while playing do
            for _, frame in ipairs(routeData) do
                if not playing then break end
                if LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
                    LP.Character.HumanoidRootPart.CFrame = frame
                end
                RS.Heartbeat:Wait()
            end
        end
    end)
end)

MacroTab:CreateSwitch("MODO AHORRO (CPU) üåë", function(s)
    toggleCPU(s)
end)

MacroTab:CreateButton("BORRAR RUTA üóëÔ∏è", function()
    routeData = {}
    Library:Notify("SISTEMA", "Ruta eliminada")
end)
